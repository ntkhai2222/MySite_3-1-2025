<%= content_for :title, "Password" %>

<main>
  <div id="account-password" class="container">
    <%= render 'home/breadcrumb' %>
    <%= render 'layouts/frontend/alert' %>
    <div class="row">
      <div id="content" class="col">
        <h1>Đổi mật khẩu</h1>
        <%= form_with url: password_path(params[:token]), method: :put do |form| %>
          <fieldset>
            <legend>Mật khẩu của bạn</legend>
            <div class="row mb-3 required">
              <%= form.label :password, "Mật khẩu", class: "col-md-3 col-form-label" %>
              <div class="col-md-9">
                <%= form.password_field :password, placeholder: "Mật khẩu", id: "input-password", class: "form-control", autocomplete: "password", maxlength: 72, autocomplete: "new-password", required: true %>
                <div id="error-password" class="invalid-feedback"></div>
              </div>
            </div>
            <div class="row mb-3 required">
              <%= form.label :confirm_password, "Xác nhận mật khẩu", class: "col-md-3 col-form-label" %>
              <div class="col-md-9">
                <%= form.password_field :confirm_password, placeholder: "Xác nhận mật khẩu", id: "input-confirm", class: "form-control", maxlength: 72 %>
                <div id="error-confirm" class="invalid-feedback"></div>
              </div>
            </div>
          </fieldset>
          <div class="d-inline-block pt-2 pd-2 w-100">
            <div class="float-start">
              <%= link_to "Quay lại", home_login_path, class: "btn btn-light" %>
            </div>
            <div class="float-end">
              <%= form.submit "Tiếp tục", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= render 'home/aside' %>
    </div>
  </div>
</main>
