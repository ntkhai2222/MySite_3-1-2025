<div class="login-box">
  <div class="login-logo">
    <b>Admin</b>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg"><b>Sign in</b></p>
    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
    <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
    <%= form_with url: session_path do |form| %>
      <div class="form-group has-feedback">
        <%= form.email_field :email_address, class: 'form-control', required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address] %><br>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= form.password_field :password, class: 'form-control', required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72 %><br>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="row">
          <div class="col-xs-4">
          </div>
          <div class="col-xs-4">
            <%= form.submit 'Sign In', class: 'btn btn-primary btn-block btn-flat' %>
          </div>
          <div class="col-xs-4">
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
