
<%= content_for :styles do %>
  <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
<% end %>
<%= form_with model: page do |form| %>
    <div class="row">
        <div class="col-md-8">
        <div class="form-group">
            <%= form.label :name, "Tên" %>
            <%= form.text_field :name, class: "form-control", placeholder: "Enter ...", required: true %>
        </div>
        </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
            <%= form.label :description, style: "display: block" %>
            <%= form.rich_text_area :description %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= link_to "Cancel", pages_path, class: 'btn btn-danger' %>
        <%= form.submit 'Lưu thông tin', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>

