<%= content_for :title, "Edit Account" %>
<main>
    <div id="account-edit" class="container">
      <%= render 'account/breadcrumb' %>
      <%= render 'layouts/frontend/alert' %>
      <div class="row">
        <div id="content" class="col">
          <h1>Thông tin tài khoản của tôi</h1>
          <%= form_with model: @user, url: account_update_path, method: :post, local: true, id: "form-customer" do |f| %>
            <fieldset>
              <legend>Thông tin cá nhân của bạn</legend>
              <div class="row mb-3 required">
                <%= f.label :name, "Họ tên", class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= f.text_field :name, value: current_user.name, placeholder: "Họ tên", class: "form-control", id: "input-name", required: true %>
                </div>
              </div>
              <div class="row mb-3 required">
                <%= f.label :email_address, "E-mail", class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= f.email_field :email_address, value: current_user.email_address, placeholder: "E-mail", class: "form-control", id: "input-email", required: true %>
                </div>
              </div>
              <div class="row mb-3 required">
                <%= f.label :phone, "Điện thoại", class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                  <%= f.telephone_field :phone, value: current_user.phone, placeholder: "Điện thoại", class: "form-control", id: "input-telephone", required: true %>
                </div>
              </div>
            </fieldset>
            <div class="d-inline-block pt-2 pd-2 w-100">
              <div class="float-start">
                <%= link_to "Quay lại", account_index_path, class: "btn btn-light" %>
              </div>
              <div class="float-end">
                <%= f.submit "Tiếp tục", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
        <%= render 'account/aside' %>
      </div>
    </div>
  </main>